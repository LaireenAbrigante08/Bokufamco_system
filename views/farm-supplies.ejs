<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Farm Supplies</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <style>
        /* General Styles */
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        header {
            background-color: #258ca3;
            color: white;
            text-align: center;
            padding: 15px 0;
        }

        h1 {
            font-size: 1.8rem;
            margin: 0;
        }

        /* Product Section */
        .products {
            padding: 30px 15px;
        }

        h2 {
            font-size: 1.5rem;
            color: #333;
            margin-bottom: 20px;
            text-align: center;
        }

        .product-list {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
            gap: 20px;
        }

        .product {
            background-color: #fff;
            border-radius: 8px;
            padding: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
            transition: transform 0.3s ease-in-out;
            position: relative;
        }

        .product:hover {
            transform: scale(1.05); /* Slight hover effect */
        }

        .product img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            margin-bottom: 15px;
            border-radius: 8px;
        }

        .product h3 {
            font-size: 1.2rem;
            margin: 10px 0;
            color: #333;
        }

        .product p {
            font-size: 0.95rem;
            color: #666;
            margin-bottom: 10px;
        }

        .product .price {
            font-size: 1.1rem;
            color: #e74c3c;
            font-weight: bold;
            margin-bottom: 15px;
        }

        .product .stock {
            font-size: 0.9rem;
            color: #2ecc71;
            margin-bottom: 15px;
        }

        .product form {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .product input {
            padding: 8px;
            font-size: 1rem;
            width: 60px;
            margin-bottom: 10px;
            border-radius: 4px;
            border: 1px solid #ddd;
        }

        .product button {
            padding: 8px 15px;
            font-size: 1rem;
            background-color: #258ca3;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .product button:hover {
            background-color: #1a6f84;
        }

        .product a {
            font-size: 1rem;
            color: #258ca3;
            text-decoration: none;
            transition: color 0.3s;
        }

        .product a:hover {
            color: #1a6f84;
        }

        /* Responsive Styles */
        @media (max-width: 768px) {
            .product-list {
                grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
            }
        }
    </style>
</head>
<body>
    <header>
        <h1>Farm Supplies</h1>
    </header>

    <section class="products">
        <h2>Available Products</h2>
        <div class="product-list">
            <% products.forEach(product => { %>
                <div class="product">
                    <img src="/images/product/<%= product.picture %>" alt="<%= product.name %>">
                    <h3><%= product.name %></h3>
                    <p><%= product.description %></p>
                    <p class="price">â‚±<%= product.price %></p>
                    <p class="stock">Stock: <%= product.stock %></p>

                    <% if (isAuthenticated) { %>
                        <form action="/add-to-cart/<%= product.id %>" method="POST">
                            <label for="quantity">Quantity:</label>
                            <input type="number" id="quantity" name="quantity" value="1" min="1" max="<%= product.stock %>" required>
                            <button type="submit" name="action" value="addToCart">Add to Cart</button>
                        </form>
                    <% } else { %>
                        <p><a href="/login">Login to purchase</a></p>
                    <% } %>
                </div>
            <% }); %>
        </div>
    </section>
</body>
</html>
