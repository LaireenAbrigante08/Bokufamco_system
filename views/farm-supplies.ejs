<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Farm Supplies</title>
    <link rel="stylesheet" href="">
    <style>
        /* General Styles */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        header {
            background-color: #258ca3;
            color: white;
            text-align: center;
            padding: 10px;
        }

        h1 {
            font-size: 1.5rem;
            margin: 0;
        }

        /* Product Section */
        .products {
            padding: 20px;
        }

        h2 {
            font-size: 1.2rem;
            color: #333;
            margin-bottom: 10px;
        }

        .product-list {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 15px;
        }

        .product {
            background-color: #fff;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            padding: 15px;
            text-align: center;
            transition: transform 0.2s ease-in-out;
        }

        .product:hover {
            transform: scale(1.05); /* Slight hover effect */
        }

        .product img {
            width: 150px;
            height: 150px;
            object-fit: cover;
            margin-bottom: 10px;
        }

        .product h3 {
            font-size: 1rem;
            margin: 10px 0;
        }

        .product p {
            font-size: 0.9rem;
            color: #666;
            margin-bottom: 5px;
        }

        .product form {
            margin-top: 10px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .product input {
            padding: 5px;
            font-size: 0.9rem;
            width: 60px;
            margin-right: 5px;
            border-radius: 4px;
            border: 1px solid #ddd;
        }

        .product button {
            padding: 5px 10px;
            font-size: 0.9rem;
            background-color: #258ca3;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .product button:hover {
            background-color: #1a6f84;
        }

        .product a {
            font-size: 0.9rem;
            color: #258ca3;
            text-decoration: none;
            transition: color 0.3s;
        }

        .product a:hover {
            color: #1a6f84;
        }

        .product .button-group {
            display: flex;
            justify-content: space-between;
            width: 100%;
        }

        .button-group button {
            width: 48%;
        }
    </style>
</head>
<body>
    <header>
        <h1>Farm Supplies</h1>
    </header>

    <section class="products">
        <h2>Available Products</h2>
        <div class="product-list">
            <% products.forEach(product => { %>
                <div class="product">
                    <img src="/images/product/<%= product.picture %>" alt="<%= product.name %>">
                    <h3><%= product.name %></h3>
                    <p><%= product.description %></p>
                    <p>Price: $<%= product.price %></p>
                    <p>Stock: <%= product.stock %></p>

                    <% if (isAuthenticated) { %>
                        <form action="/purchase/<%= product.id %>" method="POST">
                            <div class="button-group">
                                <!-- Quantity selector -->
                                <input type="number" name="quantity" min="1" max="<%= product.stock %>" value="1" required>
                                <!-- Add to Cart and Buy Now buttons -->
                                <button type="submit" name="action" value="addToCart">Add to Cart</button>
                                <button type="submit" name="action" value="buyNow">Buy Now</button>
                            </div>
                        </form>
                    <% } else { %>
                        <p><a href="/login">Login to purchase</a></p>
                    <% } %>
                </div>
            <% }); %>
        </div>
    </section>
</body>
</html>
