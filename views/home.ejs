<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BOCOFAMCO E-commerce Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <style>
        /* Global Styles */
        body {
            margin: 0;
            font-family: 'Arial', sans-serif;
            background: url('/public/images/blurredbackground.jpg') no-repeat center center fixed;
            background-size: cover;
            color: #333;
        }

        /* Header */
        .header {
            background-color: rgba(37, 140, 163, 0.9);
            color: white;
            padding: 15px 20px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

        .header .logo {
            font-size: 1.8rem;
            font-weight: bold;
            letter-spacing: 1px;
        }

        .header .search-bar {
            flex: 1;
            margin: 0 20px;
        }

        .header .search-bar input {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 25px;
            outline: none;
            transition: all 0.3s;
        }

        .header .search-bar input:focus {
            border-color: #258ca3;
            box-shadow: 0px 0px 8px rgba(37, 140, 163, 0.5);
        }

        .header .icons {
            font-size: 1.5rem;
        }

        .header .icons a {
            color: white;
            margin-left: 15px;
            text-decoration: none;
            transition: color 0.3s;
        }

        .header .icons a:hover {
            color: #ffdd57;
        }

        /* Main Content */
        .main-content {
            padding: 20px;
            max-width: 1200px;
            margin: 0 auto;
        }

        .main-content h2 {
            font-size: 2rem;
            text-align: center;
            margin-bottom: 30px;
            color: #258ca3;
        }

        /* Categories */
        .categories {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 15px;
        }

        .category-card {
            background-color: rgba(255, 255, 255, 0.9);
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            overflow: hidden;
            text-align: center;
            transition: transform 0.3s, box-shadow 0.3s;
            cursor: pointer;
            padding: 10px 0;
        }

        .category-card:hover {
            transform: scale(1.03);
            box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.2);
        }

        .category-card i {
            margin-top: 5px;
            margin-bottom: 5px;
            font-size: 1.5rem; /* Smaller icon size */
            transition: transform 0.3s;
        }

        .category-card:hover i {
            transform: scale(1.1);
        }

        .category-card h3 {
            margin: 10px 0;
            font-size: 0.9rem; /* Smaller text size */
            color: #333;
        }

        /* Dynamic Content */
        .dynamic-content {
            padding: 20px;
            background-color: rgba(255, 255, 255, 0.9);
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            margin-top: 30px;
        }

        .dynamic-content p {
            font-size: 1rem;
            color: #666;
        }
    </style>
</head>
<body>
    <!-- Header Section -->
    <div class="header">
        <div class="logo">BOCOFAMCO</div>
        <div class="search-bar">
            <input type="text" placeholder="Search for products, services...">
        </div>
        <div class="icons">
            <a href="#"><i class="fas fa-shopping-cart"></i></a>
            <a href="/memberProfile" id="memberProfile"><i class="fas fa-user"></i></a>
            <a href="#" onclick="logout()"><i class="fas fa-sign-out-alt"></i></a>
        </div>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <h2>Shop Categories</h2>
        <div class="categories">
            <!-- Farm Supplies -->
            <div class="category-card" onclick="loadSection('/farm-supplies')">
                <i class="fas fa-seedling" style="color: #28a745;"></i>
                <h3>Farm Supplies</h3>
            </div>

            <!-- Equipment Rentals -->
            <div class="category-card" onclick="loadSection('/equipment')">
                <i class="fas fa-tractor" style="color: #ff5722;"></i>
                <h3>Equipment Rentals</h3>
            </div>

            <!-- Orders -->
            <div class="category-card" onclick="loadSection('/orders')">
                <i class="fas fa-shopping-cart" style="color: #007bff;"></i>
                <h3>Orders</h3>
            </div>

            <!-- Loans -->
            <div class="category-card" onclick="loadSection('/loans')">
                <i class="fas fa-handshake" style="color: #ffc107;"></i>
                <h3>Loans</h3>
            </div>
        </div>
        <div class="dynamic-content" id="dynamic-content">
            <p>Select a category to view details.</p>
        </div>
    </div>    
    <script>
        function loadSection(url) {
            $.ajax({
                url: url,
                method: 'GET',
                success: function(data) {
                    $('#dynamic-content').html(data);
                },
                error: function(err) {
                    console.error("Error loading content:", err);
                    $('#dynamic-content').html('<p>Error loading content. Please try again.</p>');
                }
            });
        }

        function logout() {
            const confirmation = confirm("Are you sure you want to log out?");
            if (confirmation) {
                window.location.href = "/landing";
            }
        }
    </script>
</body>
</html>
