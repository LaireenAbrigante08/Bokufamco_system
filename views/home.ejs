<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BOCOFAMCO E-commerce Dashboard</title>
    <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <style>
        .carousel-item img {
            max-height: 400px;
            max-width: 100%;
            margin: auto;
            padding: 2em;
        }
        .text-center {
            color: white;
            background-color: #0c5b6d;
            padding-bottom: 20px;
            padding-top: 20px;}
    </style>
</head>
<body>
    <!-- Header Section -->
    <div class="header">
        <div class="logo">
            <a href="/home" style="text-decoration: none; color: white; display: flex; align-items: center;">
                <img src="/images/logo.jpg" alt="Logo" style="height: 50px; margin-right: 10px;">
                <span>BOCOFAMCO</span>
            </a>
        </div>
        <div class="search-bar">
            <input type="text" placeholder="Search">
            <i class="fa-solid fa-magnifying-glass"></i>
        </div>
        
        <div class="icons">
            <a href="#" id="farm-supplies-link" style="text-decoration: none; color: white; margin-right: 15px;">Farm Supplies</a>
            <a href="#" id="equipment-link" style="text-decoration: none; color: white; margin-right: 15px;">Equipment</a>
            <a href="#" id="loans-link" style="text-decoration: none; color: white; margin-right: 15px;">Loan</a>
            <a href="#" id="Myrent-link" style="text-decoration: none; color: white; margin-right: 15px;">My Rent</a>
            <a href="#about" style="text-decoration: none; color: white;">About</a>
            <a href="#contact" style="text-decoration: none; color: white;">Contact</a>
            <a href="/cart"><i class="fas fa-shopping-cart"></i></a>
            <a href="/memberProfile" id="memberProfile"><i class="fas fa-user"></i></a>
            <a href="#" onclick="logout()"><i class="fas fa-sign-out-alt"></i></a>
        </div>
    </div>

    <!-- Main Content -->
    <section class="main-section" id="home">
        <div class="content">
            <h2>Welcome to BOCOFAMCO</h2>
            <p>Your trusted place for high-quality farm supplies and equipment. Start your journey with us today!</p>
        </div>
    </section>

    <!-- Featured Items Carousel -->
    <div id="featuredItemsCarousel" class="carousel slide" data-ride="carousel" data-interval="3000">
        <h1 class="text-center"script color="blue">Featured Items</h1>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/images/Tractor.png" alt="Equipment 1" class="d-block w-100">
                <div class="carousel-caption d-none d-md-block">
                    <h3>Tractor Rental</h3>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/images/Harvester.png" alt="Equipment 2" class="d-block w-100">
                <div class="carousel-caption d-none d-md-block">
                    <h3>Harvester Rental</h3>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/images/OraganicFertilizer.png" alt="Farm Supplies 1" class="d-block w-100">
                <div class="carousel-caption d-none d-md-block">
                    <h3>Organic Fertilizer</h3>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/images/Pesticides.png" alt="Farm Supplies 2" class="d-block w-100">
                <div class="carousel-caption d-none d-md-block">
                    <h3>Pesticides</h3>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/images/Talong.png" alt="Farm Supplies 3" class="d-block w-100">
                <div class="carousel-caption d-none d-md-block">
                    <h3>High-Quality Seeds Talong</h3>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/images/Ironite.png" alt="Farm Supplies 4" class="d-block w-100">
                <div class="carousel-caption d-none d-md-block">
                    <h3>Ironite Liquid Lawn & Garden Fertilizer</h3>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/images/GrassCutter.png" alt="Equipment 3" class="d-block w-100">
                <div class="carousel-caption d-none d-md-block">
                    <h3>GrassCutter</h3>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/images/PumpSprayer.png" alt="Equipment 4" class="d-block w-100">
                <div class="carousel-caption d-none d-md-block">
                    <h3>PumpSprayer</h3>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#featuredItemsCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#featuredItemsCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <!-- About Section -->
    <section class="about-contact-section" id="about">
        <div class="card">
            <h3>About Us</h3>
            <p>BOCOFAMCO is a cooperative focused on providing local farmers with high-quality supplies and expert agricultural advice. Our mission is to support sustainable farming practices and help our members grow their businesses.</p>
            <h4>Our Values</h4>
            <ul>
                <li><strong>Quality:</strong> We only offer the best products for your farming needs.</li>
                <li><strong>Community:</strong> We are committed to supporting local farmers and fostering collaboration.</li>
                <li><strong>Sustainability:</strong> We promote eco-friendly practices to protect the future of farming.</li>
            </ul>
            <h4>Why Choose Us?</h4>
            <p>At BOCOFAMCO, we provide reliable products, expert guidance, and personalized service to help you succeed in your farming journey.</p>
        </div>
    </section>

    <!-- Contact Section -->
    <section class="about-contact-section" id="contact">
        <div class="card">
            <h3>Contact Us</h3>

            <!-- Flex container for Contact Form and Map -->
            <div class="contact-map-container">
                <!-- Contact Form -->
                <form action="#" method="post" class="contact-form">
                    <div class="form-group">
                        <label for="full-name">Full Name</label>
                        <input type="text" id="full-name" name="full-name" required>
                    </div>
                    <div class="form-group">
                        <label for="subject">Subject</label>
                        <input type="text" id="subject" name="subject" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Email Address</label>
                        <input type="email" id="email" name="email" required>
                    </div>
                    <div class="form-group">
                        <label for="message">Message</label>
                        <textarea id="message" name="message" rows="4" required></textarea>
                    </div>
                    <button type="submit" class="submit-btn">Send Message</button>
                </form>
                
                <!-- Google Map -->
                <div class="map-container">
                    <iframe 
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d31049.69532691864!2d121.15642313955075!3d13.399200899999991!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x33bce8d27d531029%3A0x81ffe177523af5e8!2sBOCOFAMCO%20STORE!5e0!3m2!1sen!2sph!4v1733043404617!5m2!1sen!2sph"
                        width="600" 
                        height="450" 
                        style="border:0;" 
                        allowfullscreen="" 
                        loading="lazy">
                    </iframe>
                </div>
            </div>

            <!-- Contact Information Icons -->
            <div class="contact-icons">
                <div class="icon-item">
                    <i class="fas fa-map-marker-alt"></i>
                    <p>BOCOFAMCO Office, Barangay, Philippines</p>
                </div>
                <div class="icon-item">
                    <i class="fas fa-phone-alt"></i>
                    <p>+63 123 456 7890</p>
                </div>
                <div class="icon-item">
                    <i class="fas fa-envelope"></i>
                    <p>support@bocofamco.com</p>
                </div>
                <div class="icon-item">
                    <i class="fas fa-globe"></i>
                    <p><a href="https://bocofamco.com" target="_blank">www.bocofamco.com</a></p>
                </div>
            </div>
        </div>
    </section>

    <script>
        function logout() {
            const confirmation = confirm("Are you sure you want to log out?");
            if (confirmation) {
                window.location.href = "/landing";
            }
        }

        // Handle clicks on Farm Supplies and Equipment Links
        $("#farm-supplies-link").click(function() {
            $("#dynamic-content").load("/farm-supplies"); // Load farm-supplies.ejs
        });

        $("#equipment-link").click(function() {
            $("#dynamic-content").load("/equipment"); // Load equipment.ejs
        });
        $("#loans-link").click(function() {
            $("#dynamic-content").load("/loans"); // Load loan.ejs
        });
        $("#Myrent-link").click(function() {
            $("#dynamic-content").load("/myrent"); // Load rent.ejs
        });
    </script>
</body>
</html>
