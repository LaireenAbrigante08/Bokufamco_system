<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>App</title>
    <link rel="stylesheet" href="/path/to/your/styles.css">
</head>
<body>
    <!-- Flash messages -->
    <% if (success) { %>
        <div class="alert alert-success">
            <%= success %>
        </div>
    <% } %>
    <% if (error) { %>
        <div class="alert alert-danger">
            <%= error %>
        </div>
    <% } %>

    <!-- Main Content -->
    <main>
        <%- body %>
    </main>
</body>
</html>
