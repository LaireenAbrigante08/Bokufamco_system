<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Rental Status</title>
    <link rel="stylesheet" href="/css/rent.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">
    <header class="main-header">
        <!-- You can add a header here if needed -->
    </header>

    <!-- Rental Status Section -->
    <div class="container mt-4">
        <section>
            <% if (rentals && rentals.length > 0) { %>
                <div class="card-body">
                    <div class="rental-section">
                        <h3>Your Rentals</h3>
                        <table class="table table-bordered table-striped">
                            <thead class="table-dark">
                                <tr>
                                    <th>Equipment</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                    <th>Pickup Time</th>
                                    <th>Total Price</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% rentals.forEach(function(rental) { %>
                                    <% if (rental.status === 'Confirmed') { %> <!-- Corrected 'Confired' to 'Confirmed' -->
                                        <tr>
                                            <td><%= rental.equipment_name %></td>
                                            <td><%= rental.rental_start_date %></td>
                                            <td><%= rental.rental_end_date %></td>
                                            <td><%= rental.pickup_time %></td>
                                            <td>₱<%= rental.total_price %></td>
                                            <td>
                                                <span class="badge bg-success">Completed</span>
                                            </td>
                                        </tr>
                                    <% } %>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Non-Active Rentals Section (Pending, Canceled) -->
                <button type="button" class="btn btn-primary w-100" data-bs-toggle="collapse" data-bs-target="#nonActiveRentals" aria-expanded="false" aria-controls="nonActiveRentals">
                    Non-Active Rentals (Pending, Canceled)
                </button>
                <div class="collapse mt-2" id="nonActiveRentals">
                    <table class="table table-bordered table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th>Equipment</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Pickup Time</th>
                                <th>Total Price</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% rentals.forEach(function(rental) { %>
                                <% if (rental.status !== 'Completed') { %> <!-- Display only Pending or Canceled rentals -->
                                    <tr>
                                        <td><%= rental.equipment_name %></td>
                                        <td><%= rental.rental_start_date %></td>
                                        <td><%= rental.rental_end_date %></td>
                                        <td><%= rental.pickup_time %></td>
                                        <td>₱<%= rental.total_price %></td>
                                        <td>
                                            <% if (rental.status === 'Pending') { %>
                                                <span class="badge bg-warning">Pending</span>
                                            <% } else if (rental.status === 'Canceled') { %> <!-- Corrected to match database status -->
                                                <span class="badge bg-danger">Canceled</span>
                                            <% } else { %>
                                                <span class="badge bg-secondary">Unknown</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (rental.status === 'Pending') { %>
                                                <form action="/rentals/cancel/<%= rental.id %>" method="POST">
                                                    <button type="submit" class="btn btn-danger">Confirm Cancellation</button>
                                                </form>
                                            <% } %>
                                        </td>
                                    </tr>
                                <% } %>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <p class="no-rentals-message">You have no rentals.</p>
            <% } %>
        </section>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
</body>

</html>
