<form action="/rent/:id" method="POST">
    <h1>Rent Equipment: <%= equipment.name %></h1>
    <p><%= equipment.description %></p>
    <p>Price per day: $<%= equipment.price %></p>
    <label for="rentalPeriod">Rental Period (in days):</label>
    <input type="number" name="rentalPeriod" id="rentalPeriod" required>
    <button type="submit">Submit Rental Request</button>
</form>
